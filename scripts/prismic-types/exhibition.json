{
  "Main": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "Page URL"
      }
    },
    "venue": {
      "type": "Text",
      "config": {
        "label": "Exhibition venue"
      }
    },
    "location": {
      "type": "Text",
      "config": {
        "label": "Exhibition location"
      }
    },
    "date": {
      "type": "Date",
      "config": {
        "label": "Date of the exhibition"
      }
    },
    "curator": {
      "type": "Text",
      "config": {
        "label": "Curator"
      }
    },
    "exhibition_type": {
      "type": "Select",
      "config": {
        "options": ["group"],
        "label": "Solo or group exhibition",
        "placeholder": "solo"
      }
    },
    "project": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["project"],
        "label": "Featured in project (this will create a link)"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Body",
      "config": {
        "choices": "%%SLICES%%"
      }
    }
  }
}
