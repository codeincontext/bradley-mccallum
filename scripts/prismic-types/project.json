{
  "Meta": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Project title"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "Project URL"
      }
    },
    "date": {
      "type": "Date",
      "config": {
        "label": "Date"
      }
    },
    "year_text": {
      "type": "Text",
      "config": {
        "label": "Year Text",
        "placeholder": "Optional - if it covers multiple years"
      }
    },
    "main_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 550,
          "height": null
        },
        "thumbnails": [],
        "label": "Main Image. Try to stick to similar ratios. Like 550x366px and 825x550px. 550px width for max quality"
      }
    }
  },
  "Page": {
    "long_title": {
      "type": "Text",
      "config": {
        "label": "Long Title",
        "placeholder": "Optional"
      }
    },
    "materials": {
      "type": "Text",
      "config": {
        "label": "Materials (uppercase after each comma)"
      }
    },
    "collaborators": {
      "type": "Text",
      "config": {
        "label": "Collaborators"
      }
    },
    "website_link_title": {
      "type": "Text",
      "config": {
        "label": "Website Link Title"
      }
    },
    "website_link": {
      "type": "Link",
      "config": {
        "label": "Website Link"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Body",
      "config": {
        "choices": "%%SLICES%%"
      }
    }
  },
  "Exhibitions": {
    "exhibitions": {
      "type": "Group",
      "config": {
        "fields": {
          "exhibition": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["exhibition"],
              "label": "Exhibition"
            }
          }
        },
        "label": "Featured Exhibitions"
      }
    }
  },
  "Civic Dialogues": {
    "civic_dialogues": {
      "type": "Slices",
      "fieldset": "Body",
      "config": {
        "choices": "%%SLICES%%"
      }
    }
  },
  "Press": {
    "press_items": {
      "type": "Group",
      "config": {
        "fields": {
          "press_item": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": ["press_item"],
              "label": "Press Item"
            }
          }
        },
        "label": "Press Items"
      }
    }
  },
  "Acknowledgements": {
    "acknowledgements": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, strong, em, hyperlink, list-item, o-list-item",
        "label": "Acknowledgements"
      }
    }
  }
}
