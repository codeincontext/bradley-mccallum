{
  "Meta": {
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title"
      }
    },
    "uid": {
      "type": "UID",
      "config": {
        "label": "URL"
      }
    },
    "date": {
      "type": "Date",
      "config": {
        "label": "Date"
      }
    },
    "year_text": {
      "type": "Text",
      "config": {
        "label": "Year Text",
        "placeholder": "Optional - if it covers multiple years"
      }
    },
    "main_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": null,
          "height": null
        },
        "thumbnails": [],
        "label": "Main Image"
      }
    }
  },
  "Page": {
    "long_title": {
      "type": "Text",
      "config": {
        "label": "Long Title",
        "placeholder": "Optional"
      }
    },
    "materials": {
      "type": "Text",
      "config": {
        "label": "Materials"
      }
    },
    "collaborators": {
      "type": "Text",
      "config": {
        "label": "Collaborators"
      }
    },
    "acknowledgements": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, strong, em, hyperlink, list-item, o-list-item",
        "label": "Acknowledgements"
      }
    },
    "press_items": {
      "type": "Group",
      "config": {
        "fields": {
          "press_item": {
            "type": "Link",
            "config": {
              "select": "document",
              "customtypes": [
                "press_item"
              ],
              "label": "Press Item"
            }
          }
        },
        "label": "Press Items"
      }
    },
    "website_link_title": {
      "type": "Text",
      "config": {
        "label": "Website Link Title"
      }
    },
    "website_link": {
      "type": "Link",
      "config": {
        "label": "Website Link"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Body",
      "config": {
        "choices": %%CHOICES%%
      }
    }
  },
  "Exhibitions": {
    "exhibitions" : {
      "type" : "Group",
      "config" : {
        "fields" : {
          "exhibition" : {
            "type" : "Link",
            "config" : {
              "select" : "document",
              "customtypes" : [ "exhibition" ],
              "label" : "Exhibition"
            }
          }
        },
        "label" : "Exhibitions"
      }
    }
  }
}
